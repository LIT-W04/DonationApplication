@model DonationApplication.Web.Models.LoginViewModel

<div class="row">
    <div class="col-md-6 col-md-offset-3 well">
        @if (!String.IsNullOrEmpty(Model.ErrorMessage))
        {
            <h2 style="color: red;">@Model.ErrorMessage</h2>
        }
        <h2>Login to your account</h2>
        <form method="POST" action="/account/login">
            <input type="text" id="email" name="email" value="@Model.Email" placeholder="Email Address" class="form-control"/>
            <br/>
            <input type="password" id="password" name="password" placeholder="Password" class="form-control"/>
            <br/>
            <button class="btn btn-primary" id="submit-button">Submit</button>
        </form>
    </div>
</div>

@section scripts
{
}