@using DonationApplication.Data
@model DonationApplication.Web.Models.ApplicationViewModel

<div class="row">
    <div class="col-md-6 col-md-offset-3 well">
        <h2>Apply for a donation</h2>
        <form method="POST" action="/home/application">
            <select id="category-select" name="categoryId" class="form-control">
                <option value="0">-- CHOOSE A CATEGORY --</option>
                @foreach (Category category in Model.Categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
            <br />
            <input type="text" name="amount" placeholder="Amount" class="form-control"/>
            <br/>
            <textarea class="form-control" rows="5" placeholder="Description" name="description"></textarea>
            <br />
            <button class="btn btn-primary" id="submit-button" disabled="disabled">Submit</button>
        </form>
    </div>
</div>

@section scripts
{
    <script src="/Scripts/application.js"></script>
}